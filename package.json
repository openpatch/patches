{
  "name": "@openpatch/patches",
  "version": "1.6.1",
  "description": "OpenPatch Design System",
  "author": {
    "name": "Mike Barkmin",
    "email": "mike@barkmin.eu",
    "url": "https://barkmin.eu"
  },
  "license": "MIT",
  "private": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpatch/patches.git"
  },
  "storybook": {
    "url": "https://main--5f4d40e9e8268b00224835e2.chromatic.com"
  },
  "peerDependencies": {
    "@emotion/cache": "^11.0.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "react": "^16.13.1 || ^17.0.0",
    "react-dom": "^16.13.1 || ^17.0.0"
  },
  "dependencies": {
    "codemirror": "^5.59.1",
    "lodash": "^4.17.20",
    "polished": "^4.0.5",
    "react-codemirror2": "^7.2.1",
    "react-hook-form": "^6.14.1",
    "react-markdown": "^5.0.3",
    "react-modal": "^3.12.1",
    "react-syntax-highlighter": "^15.4.3",
    "remark-gfm": "^1.0.0",
    "styled-system": "^5.1.5"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "concurrently yarn:build:*",
    "build:esm": "tsc --project tsconfig.json --declaration --declarationDir dist/esm --module esnext --target es2015 --outDir dist/esm",
    "build:cjs": "tsc --project tsconfig.json --declaration --declarationDir dist/cjs --module commonjs --target es5 --outDir dist/cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --collect-coverage",
    "release": "auto shipit --base-branch main",
    "docs:build": "yarn storybook:build:docs && yarn playroom:build",
    "storybook": "start-storybook -s .storybook/public",
    "storybook:build": "build-storybook -s .storybook/public",
    "storybook:build:docs": "build-storybook -s .storybook/public --docs"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "@types/react": "17.0.3"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "10.18.3",
    "@auto-it/conventional-commits": "10.18.3",
    "@auto-it/first-time-contributor": "10.18.3",
    "@babel/core": "7.13.8",
    "@babel/plugin-transform-runtime": "7.13.9",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@emotion/babel-preset-css-prop": "11.2.0",
    "@emotion/cache": "11.1.3",
    "@emotion/jest": "11.2.1",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@octokit/core": "3.2.5",
    "@storybook/addon-a11y": "6.1.21",
    "@storybook/addon-actions": "6.1.21",
    "@storybook/addon-controls": "6.1.21",
    "@storybook/addon-docs": "6.1.21",
    "@storybook/addon-links": "6.1.21",
    "@storybook/addon-storysource": "6.1.21",
    "@storybook/addon-toolbars": "6.1.21",
    "@storybook/addon-viewport": "6.1.21",
    "@storybook/node-logger": "6.1.21",
    "@storybook/react": "6.1.21",
    "@storybook/source-loader": "6.1.21",
    "@styled-system/css": "5.1.5",
    "@testing-library/dom": "7.30.0",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.1.0",
    "@testing-library/user-event": "12.8.1",
    "@types/codemirror": "0.0.108",
    "@types/facepaint": "1.2.1",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.32",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.1",
    "@types/react-modal": "3.12.0",
    "@types/styled-system": "5.1.10",
    "@types/styled-system__css": "5.0.14",
    "auto": "10.18.3",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "chromatic": "5.6.3",
    "concurrently": "6.0.0",
    "csstype": "3.0.6",
    "cz-conventional-changelog": "3.3.0",
    "fork-ts-checker-webpack-plugin": "6.1.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "plop": "2.7.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "type-fest": "0.21.2",
    "typescript": "4.2.3",
    "webpack": "5.24.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged && yarn test -o"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor"
    ]
  }
}
