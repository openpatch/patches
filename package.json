{
  "name": "@openpatch/patches",
  "version": "0.5.0",
  "description": "OpenPatch Design System",
  "author": {
    "name": "Mike Barkmin",
    "email": "mike@barkmin.eu",
    "url": "https://barkmin.eu"
  },
  "license": "MIT",
  "private": false,
  "module": "dist/es/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpatch/patches.git"
  },
  "peerDependencies": {
    "@emotion/cache": "^11.0.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "react": "^16.13.1 || ^17.0.0",
    "react-dom": "^16.13.1 || ^17.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "polished": "^4.0.5",
    "react-markdown": "^5.0.3",
    "react-modal": "^3.12.1",
    "react-syntax-highlighter": "^15.3.1",
    "remark-gfm": "^1.0.0",
    "styled-system": "^5.1.5"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:es && yarn build:cjs",
    "build:es": "tsc --project tsconfig.json --module esnext --target es2015 --outDir dist/es",
    "build:cjs": "tsc --project tsconfig.json --module commonjs --target es5 --outDir dist/cjs",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --collect-coverage",
    "release": "auto shipit",
    "docs:build": "yarn storybook:build:docs && yarn playroom:build",
    "storybook": "start-storybook -s .storybook/public",
    "storybook:build": "build-storybook -s .storybook/public",
    "storybook:build:docs": "build-storybook -s .storybook/public --docs"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "@types/react": "17.0.0"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "10.4.2",
    "@auto-it/conventional-commits": "10.4.2",
    "@auto-it/first-time-contributor": "10.4.2",
    "@babel/core": "7.12.9",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@babel/preset-react": "7.12.7",
    "@babel/preset-typescript": "7.12.7",
    "@emotion/babel-preset-css-prop": "11.0.0",
    "@emotion/cache": "11.0.0",
    "@emotion/jest": "11.1.0",
    "@emotion/react": "11.1.2",
    "@emotion/styled": "11.0.0",
    "@octokit/core": "3.2.4",
    "@storybook/addon-a11y": "6.1.11",
    "@storybook/addon-actions": "6.1.11",
    "@storybook/addon-controls": "6.1.11",
    "@storybook/addon-docs": "6.1.11",
    "@storybook/addon-links": "6.1.11",
    "@storybook/addon-storysource": "6.1.11",
    "@storybook/addon-toolbars": "6.1.11",
    "@storybook/addon-viewport": "6.1.11",
    "@storybook/node-logger": "6.1.11",
    "@storybook/react": "6.1.11",
    "@storybook/source-loader": "6.1.11",
    "@styled-system/css": "5.1.5",
    "@testing-library/dom": "7.29.0",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@testing-library/react-hooks": "3.7.0",
    "@testing-library/user-event": "12.6.0",
    "@types/facepaint": "1.2.1",
    "@types/jest": "26.0.19",
    "@types/lodash": "4.14.165",
    "@types/node": "14.14.13",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-modal": "3.10.6",
    "@types/styled-system": "5.1.10",
    "@types/styled-system__css": "5.0.14",
    "auto": "10.4.2",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "chromatic": "5.4.0",
    "csstype": "3.0.5",
    "cz-conventional-changelog": "3.3.0",
    "fork-ts-checker-webpack-plugin": "6.0.7",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "plop": "2.7.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "react-test-renderer": "17.0.1",
    "type-fest": "0.20.2",
    "typescript": "4.1.3",
    "webpack": "5.10.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged && yarn test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor"
    ]
  }
}
