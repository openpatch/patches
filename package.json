{
  "name": "@openpatch/patches",
  "version": "0.2.0",
  "description": "OpenPatch Design System",
  "author": {
    "name": "Mike Barkmin",
    "email": "mike@barkmin.eu",
    "url": "https://barkmin.eu"
  },
  "license": "MIT",
  "private": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpatch/patches.git"
  },
  "peerDependencies": {
    "@emotion/cache": "^10.0.29",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "polished": "^3.6.6",
    "react-modal": "^3.11.2",
    "styled-system": "^5.1.5"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc --project tsconfig.json",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --collect-coverage",
    "prepare": "yarn build",
    "release": "auto shipit",
    "docs:build": "yarn storybook:build:docs && yarn playroom:build",
    "storybook": "start-storybook -p 6006 -s .storybook/public",
    "storybook:build": "NODE_OPTIONS=--max_old_space_size=4096  build-storybook -s .storybook/public",
    "storybook:build:docs": "build-storybook -s .storybook/public --docs"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^9.53.1",
    "@auto-it/conventional-commits": "^9.53.1",
    "@auto-it/first-time-contributor": "^9.53.1",
    "@babel/core": "^7.11.6",
    "@emotion/cache": "^10.0.29",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-controls": "^6.0.21",
    "@storybook/addon-docs": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/addon-storysource": "^6.0.21",
    "@storybook/addon-toolbars": "^6.0.21",
    "@storybook/addon-viewport": "^6.0.21",
    "@storybook/node-logger": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@storybook/source-loader": "^6.0.21",
    "@styled-system/css": "^5.1.5",
    "@testing-library/dom": "^7.24.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/user-event": "^12.1.5",
    "@types/facepaint": "^1.2.1",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/node": "13.11.1",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-modal": "^3.10.6",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.13",
    "auto": "^9.53.1",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "csstype": "^3.0.3",
    "cz-conventional-changelog": "3.3.0",
    "emotion-theming": "^10.0.27",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "jest-emotion": "^10.0.32",
    "plop": "^2.7.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.3.0",
    "type-fest": "^0.16.0",
    "typescript": "~4.0.2",
    "webpack": "^4.44.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged && yarn test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor"
    ]
  }
}
