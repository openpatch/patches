{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/es",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*", "types"],
  "exclude": [
    "src/private",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/setupTests.ts",
    ".storybook",
    "dist",
    "node_modules"
  ]
}
