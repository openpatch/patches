{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*", "types"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.tests.tsx",
    "src/setupTests.ts",
    "dist",
    "node_modules"
  ]
}
